<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid d-flex align-items-center">
    <div class="logo-container">
      <%= link_to toys_path, class: "navbar-brand" do %>
        <%= image_tag "logo.png", class: "logo" %>
      <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
 <%# -------search bar---------------- %>
<div class="container">
  <div class="row justify-content-left"> <!-- Adjust alignment here -->
    <div class="col-md-6 col-lg-5 my-3 custom-width"><!-- searchbarAdjust width here -->
      <%= form_with url: toys_path, method: :get, class: "d-flex search-form" do %>
        <div class="input-group">

          <%= text_field_tag :query,
            params[:query],
            class: "form-control search-input",
            placeholder: "Search Toys" %>
          <%= submit_tag "Search", name: "", class: "btn btn-search" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto align-items-center">
        <% if user_signed_in? %>




          <li class="nav-item d-flex align-items-center">
            <%= link_to "Add New Toy", new_toy_path, class: "btn btn-newtoy nowrap" %>
          </li>
          <li class="nav-item active">
            <% if user_signed_in? %>
                <li class="nav-item px-3 d-flex align-items-center">
                  Hello, <%= current_user.username %>!
                </li>
              <% else %>
                <li><%= link_to 'Login', new_user_session_path %></li>
                <li><%= link_to 'Sign up', new_user_registration_path %></li>
              <% end %>
          </li>
          <li class="nav-item">
            <%# <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
          <li class="nav-icon dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
             <img src="<%= current_user.photo.attached? ? url_for(current_user.photo) : 'default_avatar.jpg' %>" class="avatar me-5 rounded-circle" alt="User Avatar" style="width: 40px; height: 40px;">
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
