<div class= "container">
  <h1><%= @toy.name %></h1>

  <div class="card-1 mb-12" >
    <div class="row g-0">
      <div class="col-md-6">
        <%= link_to "#", class: "navbar-brand" do %>
          <%= image_tag "Dolls.png", class: "img-fluid" %>
        <% end %>
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <p><strong>Category:</strong> <%= @toy.category %></p>
          <p><strong>Description:</strong> <%= @toy.description %></p>
          <p><strong>Condition:</strong> <%= @toy.condition %></p>
          <p><strong>Location:</strong> <%= @toy.location %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-4 mt-4 text-center">
    <%= simple_form_for [@toy, @trade] do |f| %>
      <%= f.association :seeker_toy, collection: current_user.toys %>
      <%= f.submit "Request to Trade", class: "btn btn-primary px-4" %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card-1 mb-3">
        <div class="card-body-ownerdetails">
          <h5 class="card-title-ownerinfo">Owner Info:</h5>
          <p class="card-text-owner-text"><%= @toy.user.username %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card-1 mb-3">
        <div class="card-body-ownerdetails">
          <h5 class="card-title-ownerinfo">Needed in Return:</h5>
          <p class="card-text-owner-text"><%= @toy.need_in_return %></p>
        </div>
      </div>
    </div>
  </div>
</div>
