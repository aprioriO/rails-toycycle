<div class = "container">
  <div class="user-profile">
    <div class="user-image">
      <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
    </div>

    <div class="profile-content">
      <div class="user-name">
    <!-- Display the user's name -->
        <h1><%= @user.username %></h1>
    </div>

    <div class="user-description">
        <p><%= @user.description %></p>
    </div>
    </div>
  </div>

  <h2>Toys available to trade:</h2>
    <% @toys.each do |toy| %>
      <%= link_to toy_path(toy) do %>
        <div class="card-product">
          <img src="https://media.istockphoto.com/id/1147544807/vector/thumbnail-image-vector-graphic.jpg?s=612x612&w=0&k=20&c=rnCKVbdxqkjlcs3xH87-9gocETqpspHFXu5dIGB4wuM=" />
          <div class="card-product-infos">
              <h3><%=toy.name%><h3>
              <p><%= toy.description %><p>
              <p><strong>Is seeking:</strong> <%= toy.need_in_return %></p>
            </div>
        </div>
      <% end %>
    <% end %>

  <h1>Leave a Review</h1>
  <div class="user-rating">
  <%= simple_form_for [@user, @review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating, collection: 1..5 %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  </div>

  <h2>Reviews</h2>
  <div class="user-reviews">
    <% @user.reviews.each do | review| %>
      <p><%= review.comment %></p>
      <p>
        <% review.rating.times do %>
          <i class="fas fa-star" style="color: gold;"></i> <!-- Filled star -->
        <% end %>

        <% (5 - review.rating).times do %>
          <i class="far fa-star" style="color: gold;"></i> <!-- Empty star -->
        <% end %>
      </p>
      <p>--------------------</p>
    <% end %>
  </div>

</div>
